pkgbase=cgilib
pkgname=python-cgilib-database
pkgver=0.1
_pkgver=0.1
pkgrel=1
pkgdesc='a simple cgi lib used for a school pet project'
arch=('any')
license=('ISC')
depends=('python' 'python-pymacaroons' 'python-cookies')
makedepends=('python-setuptools')
source=("$pkgbase-$pkgver.tar.gz")
sha512sums=('SKIP')

prepare() {
  cd "$srcdir"
#  cp -a "${pkgbase%-git}-$_pkgver"
}

pkgver() {
  cd $pkgbase-$_pkgver
  git rev-parse --short HEAD | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

package_python-nio-git() {
  cd "$srcdir/${pkgbase%-VCS}-$_pkgver"

  make DESTDIR="$pkgdir" install
}
